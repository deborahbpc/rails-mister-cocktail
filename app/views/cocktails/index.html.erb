<h1>Cocktails</h1>

<%= simple_form_for :search, url: root_path, method: 'GET', html: { class: 'form-inline' } do |f| %>
  <%= f.input :name, label: 'What are you looking for: ', input_html: {value: ""} %>
  <%# the input_html black default is to reset the form on page reload %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
  <% end %>
</ul>

<%= link_to 'Add new cocktail', new_cocktail_path %>
