<div class="container">
  <div class='d-flex justify-content-around'>
    <h3>The most delicious drinks around</h3>
    <%= link_to 'Add new cocktail', new_cocktail_path %>
  </div>

  <div>
    <ul>
      <% @cocktails.each do |cocktail| %>
        <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
      <% end %>
    </ul>
  </div>
  
</div>



