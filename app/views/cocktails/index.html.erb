<div class="container-drinks">
  <div class='d-flex justify-content-around align-items-center my-10'>
    <h3>The most delicious drinks around</h3>
    <%= link_to 'Add new cocktail', new_cocktail_path %>
  </div>

  <div>
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
          <p><%= cocktail.description %></p>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <%# add class btn btn-primary %>
        </div>
      </div>
    <% end %>
  </div>
  
</div>


